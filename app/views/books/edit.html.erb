
<h1>Editing Book</h1>
<%= form_with model: @book, url: update_book_path(@book), method: :patch do |f| %>

<div class="error_explanation"><% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>

  <%end%>
<%end%>
  </ul>
</div>


  <form class="edit_book">
    <div class="field">
    <label for="book_title">Title</label>
  <%= f.text_field :title %>
    </div>

  
    <div class="field">
    <label for="book_title">Body</label>
  <%= f.text_area :body %>
    </div>
  
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  
  </form>
  
<%=link_to"Show", book_path(@book)%> |  <%=link_to"Back", "/books"%>
  
<% end %>